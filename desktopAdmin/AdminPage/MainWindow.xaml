<Window x:Class="AdminPage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPage"
        mc:Ignorable="d"
        Title="CRUD Műveletek" Height="543" Width="1100">
    <Grid Margin="0,0,0,1">
        <TabControl x:Name="tabControl" Margin="10,10,10,10">
            <TabItem Header="Users Tábla">
                <Grid Background="#FFE5E5E5">
                    <StackPanel VerticalAlignment="Top" Height="35" Orientation="Horizontal">
                        <Label Content="Név:" Width="41" Height="30" FontSize="14"/>
                        <TextBox TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Left" Height="30" VerticalContentAlignment="Center"/>
                        <Label Content="Email:" Width="45" Height="30" FontSize="14"/>
                        <TextBox TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Left" Height="30" VerticalContentAlignment="Center"/>
                        <Label Content="Telefonszám:" Width="92" Height="30" FontSize="14"/>
                        <TextBox TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Left" Height="30" VerticalContentAlignment="Center"/>
                        <Label Content="Jelszó:" Width="49" Height="30" FontSize="14"/>
                        <TextBox TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Left" Height="30" VerticalContentAlignment="Center"/>
                        <Button Content="Hozzáad" Width="85" Margin="10,0,0,0"/>
                        <Button Content="Módosítás" Width="85" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Bookings Tábla">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
