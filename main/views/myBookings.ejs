<script src="/js/myBookings.js" defer></script>
<title>Parking | Foglalásaim</title>
<%- include('layout', {body: '' }) %>

    <!-- #region Dark Mode Toggling Button -->
    <button id="dark-mode-switch" onclick="toggleDarkMode()">
