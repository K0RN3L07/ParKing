<Window x:Class="AdminPage.Login"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:AdminPage"
        mc:Ignorable="d"
        Background="#FF0F1631"
        Title="ParKing - Admin Bejelentkezés" Height="450" Width="600" ResizeMode="NoResize" Icon="/logo.ico">
	<Window.Resources>
		<!-- Palette mapped from your webpage variables -->
		<SolidColorBrush x:Key="WindowBackground" Color="#FF070B1D"/>
        
		<!-- base-color -->
		<SolidColorBrush x:Key="Surface" Color="#FF0F1631"/>
        
		<!-- secondary-base-color -->
		<SolidColorBrush x:Key="SurfaceHover" Color="#FF1F1E42"/>
        
		<!-- accent-base-color (used for hover) -->
		<SolidColorBrush x:Key="Accent" Color="#FF274C77"/>
        
		<!-- primary-color -->
		<SolidColorBrush x:Key="AccentStrong" Color="#FF0870BD"/>
        
		<!-- secondary-color -->
		<SolidColorBrush x:Key="PrimaryText" Color="#FFEBEBEB"/>
        
		<!-- primary-text-color -->
		<SolidColorBrush x:Key="SecondaryText" Color="#FFD6D6D6"/>
        
		<!-- secondary-text-color -->
		<SolidColorBrush x:Key="Divider" Color="#FF203044"/>
        
		<!-- subtle divider with contrast -->
		<Style TargetType="Label">
			<Setter Property="Foreground" Value="#FFEBEBEB" />
		</Style>
        
		<!-- TextBox -->
		<Style x:Key="BaseTextBoxStyle" TargetType="TextBox">
			<Setter Property="Background" Value="#FF1F1E42"/>
			<Setter Property="Foreground" Value="#FFEBEBEB"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="5"/>
		</Style>
        
		<!-- PasswordBox -->
		<Style x:Key="BasePasswordBoxStyle" TargetType="PasswordBox">
			<Setter Property="Background" Value="#FF1F1E42"/>
			<Setter Property="Foreground" Value="#FFEBEBEB"/>
			<Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Rounded Button -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1F1E42"/>
            <Setter Property="Foreground" Value="#FFEBEBEB"/>
            <Setter Property="BorderBrush" Value="#FF5A5A8A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                    x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8">
                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                        </Border>

                        <!-- States -->
                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF2A295A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF7A7AD6"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF16153A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF9A9AFF"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
	<Grid>
		<Grid.Resources>
			<Style x:Key="RoundedTextBox"
                   TargetType="TextBox"
                   BasedOn="{StaticResource BaseTextBoxStyle}">
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="TextBox">
							<Border
                        CornerRadius="15"
                        BorderBrush="#FF5A5A8A"
                        BorderThickness="1"
                        Background="{TemplateBinding Background}">
								<ScrollViewer x:Name="PART_ContentHost"/>
							</Border>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
            
			<!-- Rounded PasswordBox -->
			<Style x:Key="RoundedPasswordBox"
                   TargetType="PasswordBox"
                   BasedOn="{StaticResource BasePasswordBoxStyle}">
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="PasswordBox">
                            <Border
                                CornerRadius="15"
                                BorderBrush="#FF5A5A8A"
                                BorderThickness="1"
                                Background="{TemplateBinding Background}">
                                <ScrollViewer x:Name="PART_ContentHost"/>
							</Border>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</Grid.Resources>
        
		<Label Content="ParKing - Admin Bejelentkezés" HorizontalAlignment="Center" Height="67" Margin="0,20,0,0" VerticalAlignment="Top" Width="584" FontSize="36" FontWeight="UltraBold" HorizontalContentAlignment="Center"/>
		
        <Label Content="Felhasználónév:" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" Height="30px" Width="194" FontSize="16" FontWeight="SemiBold" Padding="0,5,5,5"/>
		<TextBox x:Name="tbName" Style="{StaticResource RoundedTextBox}" HorizontalAlignment="Center" Margin="0,148,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="30px" Width="192" VerticalContentAlignment="Center" TabIndex="1"/>
		
        <Label Content="Jelszó:" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30px" Width="192" FontSize="16" FontWeight="SemiBold" Padding="0,5,5,5" Margin="0,183,0,0"/>
		<PasswordBox x:Name="pbPassword" Style="{StaticResource RoundedPasswordBox}" PasswordChar="*" HorizontalAlignment="Center" Margin="0,214,0,0" VerticalAlignment="Top" Height="30px" Width="194" VerticalContentAlignment="Center" TabIndex="2"/>
		
        <Label Name="lblError" Content="" HorizontalAlignment="Center" Margin="0,244,0,0" VerticalAlignment="Top" Width="192" Padding="0,5,5,5" Height="47" VerticalContentAlignment="Center"/>

        <Button Content="Belépés" Style="{StaticResource RoundedButton}" HorizontalAlignment="Center" Margin="0,291,0,0" VerticalAlignment="Top" Width="194" Height="30px" FontSize="16px" Click="Button_Click" TabIndex="3"/>
		
        <Image Margin="10,324,490,10" Source="/full_logo.png"/>
	</Grid>
</Window>
