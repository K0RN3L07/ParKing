<Window x:Class="AdminPage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPage"
        mc:Ignorable="d"
        Title="ParKing - Admin" Height="606" Width="1478" Icon="/logo.ico">
    <Grid Margin="0,0,0,1">

        <TabControl x:Name="tabControl" Margin="10,10,10,10">

            <!--#region Users -->
            <TabItem Header="Users Tábla">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Top" Height="35" Orientation="Horizontal">

                        <Label Content="Név:" Width="41" Height="30" FontSize="14"/>
                        <TextBox x:Name="tbName" TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Left" Height="30" VerticalContentAlignment="Center"/>

                        <Label Content="Email:" Width="45" Height="30" FontSize="14"/>
                        <TextBox x:Name="tbEmail" TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Left" Height="30" VerticalContentAlignment="Center"/>

                        <Label Content="Telefonszám:" Width="92" Height="30" FontSize="14"/>
                        <TextBox x:Name="tbPhoneNum" TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Left" Height="30" VerticalContentAlignment="Center"/>

                        <Label Content="Jelszó:" Width="49" Height="30" FontSize="14"/>
                        <TextBox x:Name="tbPassword" TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Left" Height="30" VerticalContentAlignment="Center"/>

                        <Button Content="X" Width="35" Margin="10,0,0,0" Click="ClearButton_Click"/>
                        <Button Content="Hozzáad" Click="AddUser_Click" Width="85" Margin="10,0,0,0"/>
                        <Button Content="Módosítás" Click="UpdateUser_Click" Width="85" Margin="10,0,0,0"/>
                        <TextBox x:Name="tbId" TextWrapping="Wrap" Text="" Width="120" Height="30" VerticalContentAlignment="Center" Opacity="0"/>
                    </StackPanel>

                    <DataGrid x:Name="userTable" 
                              Grid.Row="1"
                              AutoGenerateColumns="True"
                              SelectionChanged="UsersGrid_SelectionChanged"
                    />

                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <Button Content="Úratöltés" Click="LoadAllData_Click" Width="75" Margin="10,0,0,0"/>
                        <Button Content="Töröl" Click="DeleteUser_Click" Width="75" Margin="10,0,0,0"/>
                    </StackPanel>

                </Grid>
            </TabItem>
            <!--#endregion-->

            <!--#region Messages -->
            <TabItem Header="Messages Tábla">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="messagesTable" 
                        Grid.Row="0"
                        AutoGenerateColumns="True"
                    />

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Button Content="Úratöltés" Click="LoadAllData_Click" Width="75" Margin="10,0,0,0"/>
                        <Button Content="Töröl" Click="DeleteMessage_Click" Width="75" Margin="10,0,0,0"/>
                    </StackPanel>

                </Grid>
            </TabItem>
            <!--#endregion-->

            <!--#region Bookings -->
            <TabItem Header="Bookings Tábla">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Center" Height="35" Orientation="Horizontal">
                        <Label Content="ID:" Width="27" Height="30" FontSize="14"/>
                        <TextBox x:Name="tbBookingsId" Cursor="No" IsEnabled="False" TextWrapping="Wrap" Text="" Width="35" Height="30" VerticalContentAlignment="Center"/>

                        <Label Content="User ID:" Width="59" Height="30" FontSize="14"/>
                        <TextBox x:Name="tbBookingsUserId" TextWrapping="Wrap" Text="" Width="35" Height="30" VerticalContentAlignment="Center"/>

                        <Label Content="Parking ID:" Width="74" Height="30" FontSize="14"/>
                        <TextBox x:Name="tbBookingsParkingId" TextWrapping="Wrap" Text="" Width="35" HorizontalAlignment="Left" Height="30" VerticalContentAlignment="Center"/>

                        <Label Content="Foglalás kezdete:" Width="118" Height="30" FontSize="14"/>
                        <DatePicker x:Name="dpStartTime" Height="35" Width="111" VerticalContentAlignment="Center" Text="Válassz időpontot" FirstDayOfWeek="Monday" BorderThickness="0,0,0,0"/>

                        <Label Content="Foglalás vége:" Width="99" Height="30" FontSize="14"/>
                        <DatePicker x:Name="dpEndTime" Height="35" Width="111" VerticalContentAlignment="Center" Text="Válassz időpontot" FirstDayOfWeek="Monday" BorderThickness="0,0,0,0"/>

                        <Label Content="Foglalás időpontja:" Width="129" Height="30" FontSize="14"/>
                        <TextBox x:Name="tbBooked" IsEnabled="False" TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Left" Height="30" VerticalContentAlignment="Center"/>

                        <Label Content="Jármű rendszáma:" Width="124" Height="30" FontSize="14"/>
                        <TextBox x:Name="tbPlateNum" TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Left" Height="30" VerticalContentAlignment="Center"/>

                        <Button Content="X" Width="35" Margin="10,0,0,0" Click="ClearButton_Click"/>
                        <Button Content="Hozzáad" Click="AddBooking_Click" Width="85" Margin="10,0,0,0"/>
                        <Button Content="Módosítás" Click="UpdateBooking_Click" Width="85" Margin="10,0,0,0"/>
                    </StackPanel>

                    <DataGrid x:Name="bookingsTable" 
                              Grid.Row="1"
                              AutoGenerateColumns="True"
                              SelectionChanged="BookingsGrid_SelectionChanged"
                    />

                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <Button Content="Úratöltés" Click="LoadAllData_Click" Width="75" Margin="10,0,0,0"/>
                        <Button Content="Töröl" Click="DeleteBooking_Click" Width="75" Margin="10,0,0,0"/>
                    </StackPanel>

                </Grid>
            </TabItem>
            <!--#endregion -->

            <!--#region Parking Spaces-->
            <TabItem Header="Parking Spaces Tábla">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="parkingTable"
                              Grid.Row="0"
                              AutoGenerateColumns="True"
                    />

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Button Content="Úratöltés" Click="LoadAllData_Click" Width="75" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <!--#endregion-->

        </TabControl>

    </Grid>
</Window>
